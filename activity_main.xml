<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.com.calculator.MainActivity">

    //scrollview for wide screen mode
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scv">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            //edit text for print result value
            <EditText
                android:background="#6b2489fc"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="0.00"
                android:textSize="30dp"
                android:editable="false"
                android:gravity="right|center"
                android:id="@+id/main"
                />
            //calculator buttons
            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/b7"
                android:text="7"
                android:layout_below="@id/main"/>
            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/b8"
                android:text="8"
                android:layout_below="@id/main"
                android:layout_toRightOf="@+id/b7"/>
            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/b9"
                android:text="9"
                android:layout_below="@id/main"
                android:layout_toRightOf="@+id/b8"/>
            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/bDiv"
                android:text="/"
                android:layout_below="@id/main"
                android:layout_toRightOf="@+id/b9"/>




            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/b4"
                android:text="4"
                android:layout_below="@id/b7"/>
            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/b5"
                android:text="5"
                android:layout_below="@id/b7"
                android:layout_toRightOf="@+id/b4"/>
            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/b6"
                android:text="6"
                android:layout_below="@id/b7"
                android:layout_toRightOf="@+id/b5"/>
            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/bMulti"
                android:text="*"
                android:layout_below="@id/b7"
                android:layout_toRightOf="@+id/b6"/>



            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/b1"
                android:text="1"
                android:layout_below="@id/b4"/>
            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/b2"
                android:text="2"
                android:layout_below="@id/b4"
                android:layout_toRightOf="@+id/b1"/>
            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/b3"
                android:text="3"
                android:layout_below="@id/b4"
                android:layout_toRightOf="@+id/b2"/>
            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/bSub"
                android:text="-"
                android:layout_below="@id/b4"
                android:layout_toRightOf="@+id/b3"/>



            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/b0"
                android:text="0"
                android:layout_below="@id/b1"/>
            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/bC"
                android:text="C"
                android:layout_below="@id/b1"
                android:layout_toRightOf="@+id/b0"/>
            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/bEq"
                android:text="="
                android:layout_below="@id/b1"
                android:layout_toRightOf="@+id/bC"/>
            <Button
                android:layout_margin="3dp"
                android:background="#6b2489fc"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:id="@+id/bPlu"
                android:text="+"
                android:layout_below="@id/b1"
                android:layout_toRightOf="@+id/bEq"/>
        </RelativeLayout>
    </ScrollView>

    
</RelativeLayout>
